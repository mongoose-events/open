{
  "name": "mongoose-event-open",
  "version": "0.1.1",
  "description": "a mongoose event handler that handles the open event",
  "author": "dan entous",
  "license": "MIT",
  "main": "src",
  "keywords": [
    "mongoose event",
    "mongoose event open"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mongoose-events/open.git"
  },
  "bugs": {
    "url": "https://github.com/mongoose-events/open/issues"
  },
  "homepage": "https://github.com/mongoose-events/open#readme",
  "scripts": {
    "cover:browser": "npm test -- --coverage-report=lcov",
    "cover:cli": "npm test -- --cov",
    "cover:travis": "npm test -- --coverage-report=lcov --no-browser",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "eslint": "eslint .",
    "pre-commit": "echo 'pre-commit checks ...' && npm run eslint && npm test -- --cov",
    "test": "tap test/**/*.test.js --reporter spec"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "devDependencies": {
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "eslint-config-dan-nl": "^0.1.5",
    "ghooks": "^2.0.4",
    "sinon": "^4.5.0",
    "tap": "^12.0.1"
  }
}
